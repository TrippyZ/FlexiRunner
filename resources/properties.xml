<resources>

  <properties>
    <property id="pTimerDisplay" type="number">0</property>
    <property id="pDistDisplay" type="number">0</property>  	
  	<property id="pTargetPace" type="number">0</property>    
    <property id="pBottomLeftMetric" type="number">1</property>
    <property id="pBottomRightMetric" type="number">0</property>
    <property id="pCentreRightMetric" type="boolean">false</property>
    <property id="pRoundedPace" type="boolean">true</property>
	</properties>


  <fitContributions>
    <fitField id="0"
      displayInChart="true"
      displayInActivityLaps="false"
      displayInActivitySummary="false"
      sortOrder="1"
      precision="0"
      chartTitle="@Strings.lEconomyChart"
      dataLabel="@Strings.lEconomyData"
      unitLabel="@Strings.lEconomyUnits"
      fillColor="#0fc491" />
    <fitField id="1"
      displayInChart="false"
      displayInActivityLaps="false"
      displayInActivitySummary="true"
      sortOrder="1"
      precision="0"
      dataLabel="@Strings.lEconomyAvgData"
      unitLabel="@Strings.lEconomyUnits" />
    <fitField id="2"
      displayInChart="false"
      displayInActivityLaps="true"
      displayInActivitySummary="false"
      sortOrder="1"
      precision="0"
      dataLabel="@Strings.lEconomyAvgData"
      unitLabel="@Strings.lEconomyUnits" />
    <fitField id="3"
      displayInChart="true"
      displayInActivityLaps="false"
      displayInActivitySummary="false"
      sortOrder="0"
      precision="0"
      chartTitle="@Strings.lEEChart"
      dataLabel="@Strings.lEEData"
      unitLabel="@Strings.lEEUnits"
      fillColor="#c4540f" />
  </fitContributions>


  <strings>
    <!-- Release name: -->
    <string id="AppName">Flexirunner</string>
    <!-- Beta name:
    <string id="AppName">Flexirunner Beta</string>
    -->
    <string id="AppVersion">4.1.1</string>
    <string id="lTimerDisplay">Timer field</string>
    <string id="lTimerTimer">Timer</string>
    <string id="lTimerMoving">Moving time</string>
    <string id="lTimerLap">Current lap time</string>
    <string id="lTimerLastLap">Last lap time</string>
    <string id="lTimerAvgLap">Average lap time</string>
    <string id="lDistDisplay">Distance field</string>
    <string id="lDistDistance">Total distance</string>
    <string id="lDistMoving">Moving distance</string>
    <string id="lDistLap">Current lap distance</string>
    <string id="lDistLastLap">Last lap distance</string>
    <string id="lTargetPace">Target pace metric</string>
    <string id="lCentreRightMetric">Show economy instead of cadence</string>
    <string id="lBottomLeftMetric">Bottom left field</string>
    <string id="lBottomRightMetric">Bottom right field</string>
    <string id="lAvgPace">Overall average pace</string>
    <string id="lRunPace">Moving (running) pace</string>
    <string id="lLapPace">Current lap pace</string>
    <string id="lLapRunPace">Current lap moving (running) pace</string>
    <string id="lLastLapPace">Last lap pace</string>
    <string id="lLastLapRunPace">Last lap moving (running) pace</string>
    <string id="lEconomyChart">Running Economy</string>
    <string id="lEconomyData">Economy</string>
    <string id="lEconomyAvgData">Avg Economy</string>
    <string id="lEconomyUnits"> </string>
    <string id="lEEChart">Energy Expenditure</string>
    <string id="lEEData">Energy Expenditure</string>
    <string id="lEEUnits">kcal/h</string>
    <string id="lRoundedPace">Show current pace as Rounded Pace</string>
  </strings>


  <settings>
    <setting propertyKey="@Properties.pTimerDisplay" title="@Strings.lTimerDisplay">
      <settingConfig type="list" required="true">
        <listEntry value="0">@Strings.lTimerTimer</listEntry>
        <listEntry value="1">@Strings.lTimerMoving</listEntry>
        <listEntry value="2">@Strings.lTimerLap</listEntry>
        <listEntry value="3">@Strings.lTimerLastLap</listEntry>
        <listEntry value="4">@Strings.lTimerAvgLap</listEntry>
      </settingConfig>
    </setting>
    <setting propertyKey="@Properties.pDistDisplay" title="@Strings.lDistDisplay">
      <settingConfig type="list" required="true">
        <listEntry value="0">@Strings.lDistDistance</listEntry>
        <listEntry value="1">@Strings.lDistMoving</listEntry>
        <listEntry value="2">@Strings.lDistLap</listEntry>
        <listEntry value="3">@Strings.lDistLastLap</listEntry>
      </settingConfig>
    </setting>  	
  	<setting propertyKey="@Properties.pTargetPace" title="@Strings.lTargetPace">
  		<settingConfig type="list" required="true">
  			<listEntry value="0">@Strings.lAvgPace</listEntry>
  			<listEntry value="1">@Strings.lRunPace</listEntry>
  			<listEntry value="2">@Strings.lLapPace</listEntry>
  			<listEntry value="3">@Strings.lLapRunPace</listEntry>
  			<listEntry value="4">@Strings.lLastLapPace</listEntry>
  			<listEntry value="5">@Strings.lLastLapRunPace</listEntry>
  		</settingConfig>
  	</setting>
    <setting propertyKey="@Properties.pBottomLeftMetric" title="@Strings.lBottomLeftMetric">
      <settingConfig type="list" required="true">
        <listEntry value="0">@Strings.lAvgPace</listEntry>
        <listEntry value="1">@Strings.lRunPace</listEntry>
        <listEntry value="2">@Strings.lLapPace</listEntry>
        <listEntry value="3">@Strings.lLapRunPace</listEntry>
        <listEntry value="4">@Strings.lLastLapPace</listEntry>
        <listEntry value="5">@Strings.lLastLapRunPace</listEntry>
      </settingConfig>
    </setting>
    <setting propertyKey="@Properties.pBottomRightMetric" title="@Strings.lBottomRightMetric">
      <settingConfig type="list" required="true">
        <listEntry value="0">@Strings.lAvgPace</listEntry>
        <listEntry value="1">@Strings.lRunPace</listEntry>
        <listEntry value="2">@Strings.lLapPace</listEntry>
        <listEntry value="3">@Strings.lLapRunPace</listEntry>
        <listEntry value="4">@Strings.lLastLapPace</listEntry>
        <listEntry value="5">@Strings.lLastLapRunPace</listEntry>
      </settingConfig>
    </setting>
    <setting propertyKey="@Properties.pCentreRightMetric" title="@Strings.lCentreRightMetric">
      <settingConfig type="boolean" required="true" />
    </setting>
    <setting propertyKey="@Properties.pRoundedPace" title="@Strings.lRoundedPace">
      <settingConfig type="boolean" required="true" />
    </setting>   
  </settings>

  <bitmap id="LauncherIcon" filename="launcher_icon.png"></bitmap>

</resources>
